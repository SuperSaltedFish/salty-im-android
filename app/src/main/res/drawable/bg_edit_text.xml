<?xml version="1.0" encoding="utf-8"?>
<inset xmlns:android="http://schemas.android.com/apk/res/android"
    android:insetTop="4dp"
    android:insetBottom="4dp">
    <selector>
        <item
            android:drawable="@drawable/bg_et_underline_un_focus"
            android:state_enabled="false" >
            <layer-list>
                <item
                    android:bottom="0dp"
                    android:left="-2dp"
                    android:right="-2dp"
                    android:top="-6dp">
                    <shape>
                        <solid android:color="@android:color/transparent" />
                        <stroke
                            android:width="1dp"
                            android:color="?attr/colorControlNormal" />
                        <padding android:bottom="4dp" />
                    </shape>
                </item>
            </layer-list>
        </item>
        <item
            android:drawable="@drawable/bg_et_underline_un_focus"
            android:state_focused="false"
            android:state_pressed="false" >
            <layer-list>
                <item
                    android:bottom="0dp"
                    android:left="-2dp"
                    android:right="-2dp"
                    android:top="-6dp">
                    <shape>
                        <solid android:color="@android:color/transparent" />
                        <stroke
                            android:width="1dp"
                            android:color="?attr/colorControlNormal" />
                        <padding android:bottom="4dp" />
                    </shape>
                </item>
            </layer-list>
        </item>
        <item android:drawable="@drawable/bg_et_underline_focus" >
            <layer-list>
                <item
                    android:bottom="0dp"
                    android:left="-2dp"
                    android:right="-2dp"
                    android:top="-6dp">
                    <shape>
                        <solid android:color="@android:color/transparent" />
                        <stroke
                            android:width="1dp"
                            android:color="?attr/colorControlNormal" />
                        <padding android:bottom="4dp" />
                    </shape>
                </item>
            </layer-list>
        </item>
    </selector>

</inset>
